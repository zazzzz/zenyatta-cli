* {
    margin: 0;
    padding: 0;
    font-family: 'PingFang SC', 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

ul, li {
    list-style: none;
}

a {
    text-decoration: none;
    color: #fff;
}

/* common  end */


/* header */
.wrapper-header {
    background-color: #9186EB;
    color: #fff;
    padding-top: 20px;
    height: 689px;
    position: relative;
    border-bottom: 1px solid #979797;
}

.wrapper-header header .brand {
    margin-right: 70px;
    margin-left: 110px;
}

.brand span {
    font-size: 28px;
}

.wrapper-header .navigator,  .brand {
    display: inline-block;
    vertical-align: middle;
}

.wrapper-header .navigator .menu {
    display: flex;
    align-items: center;
}

.navigator .menu .menu-item {
    margin-right: 80px;
}

.wrapper-header .navigator a {
    font-size: 14px;
    color: #fff;
}
/*
.wrapper-header .navigator a:hover {
    color: #fff;
} */

.header-contaier {
    width: 100%;
    clear: both;
}

.header-contaier .desc {
    margin-left: 130px;
    margin-top: 153px;
    z-index: 100;
    position: absolute;
}

.desc .brand-title {
    font-size: 70px;
    font-weight: normal;
}

.desc .brand-desc1 {
    font-size: 34px;
}

.desc .brand-desc2 {
    font-size: 26px;
    margin-top: 70px;
}

.desc .brand-desc3 {
    font-size: 20px;
    margin-top: 23px;
}

.header-contaier .img img {
    position: absolute;
    right: 74px;
    bottom: 52px;
    z-index: 10;
}

/* header end */

/* container */

.container {
    overflow: hidden;
    background: url('./images/header_bg.png') no-repeat;
    background-position-y: -160px;
    background-size: 100%;
}

/* container intro-list */

.container .intro-list {
    margin: 344px 130px 290px;
}

.intro-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 100px;
}

.intro-list .intro {
    width: 424px;
}

.intro-list .intro .number {
    color: #9186EB;
    font-size: 90px;
    font-weight: bold;
    font-family: Arial, Helvetica, sans-serif;
    width: 127px;
    height: 127px;
}

.intro .intro-title {
    color: #333333;
    font-size: 30px;
}

.intro .intro-desc {
    color: #666666;
    font-size: 20px;
    margin-top: 20px;
}

.intro-list li:nth-child(2n) {
    flex-direction: row-reverse;
}

/* container module */

.module {
    color: #6A5BF3;
    text-align: center;
}

.module-title {
    font-size: 30px;
    font-weight: normal;
}

.module-desc {
    font-size: 18px;
    margin-top: 12px;
}

.case-list {
    display: flex;
    justify-content: center;
    align-items: center;
}

.case-list .case {
    margin: 36px 30px;
}

.case .case-name {
    color: #4A4A4A;
    font-size: 24px;
    text-align: center;
    width: 100%;
}

/* footer */

.footer {
    background: url('./images/footer_bg.png') no-repeat bottom;
    background-size: 100%;
    height: 437px;
    position: relative;
    color: #fff;
}

.footer-content {
    /* overflow: hidden; */
    height: 100px;
    position: absolute;
    bottom: 39px;
    display: flex;
    justify-content: space-around;
    width: 100%;
}

.footer-content .title {
    font-size: 14px;
    font-weight: normal;
}

.footer-info .brand {
    width: 100%;
    text-align: center;
}

.footer-info .brand .logo {
    margin-right: 10px;
}

.footer-info p {
    font-size: 12px;
    margin-top: 11px;
}

.footer-friendlink .link {
    display: inline-block;
    margin-right: 38px;
    margin-top: 30px;
    font-size: 12px;
}

.line {
    content: '';
    height: 80px;
    width: 1px;
    background: #fff;
    margin-top: 10px;
}

.icon {
    display: inline-block;
    width: 14px;
    margin-right: 10px;
    vertical-align: middle;
}

.icon-location {
    background: url('./images/icon-location.png') no-repeat;
    height: 18px;
}

.icon-email {
    background: url('./images/icon-email.png') no-repeat;
    height: 12px;
}

.icon-phone {
    background: url('./images/icon-phone.png') no-repeat;
    height: 13px;
}

.call-item {
    font-size: 12px;
    margin-top: 5px;
}